<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="Überschrift1">
        <Setter Property="TextBlock.FontWeight" Value="Bold" />
        <Setter Property="TextBlock.FontSize" Value="16" />
        <Setter Property="TextBlock.Margin" Value="10" />
    </Style>
    <Style x:Key="Überschrift2">
        <Setter Property="TextBlock.FontWeight" Value="Bold" />
        <Setter Property="TextBlock.FontSize" Value="13" />
        <Setter Property="TextBlock.Margin" Value="10" />
    </Style>
    <Style x:Key="Fließtext">
        <Setter Property="TextBlock.FontSize" Value="11" />
        <Setter Property="TextBlock.Margin" Value="10" />
    </Style>
    <FlowDocument x:Key="keine_Infos">
        <Paragraph Style="{StaticResource Überschrift1}">
            keine Informationen vorhanden
        </Paragraph>
    </FlowDocument>
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="ZusatzinformationenAventurischeNamen.xaml" />
    </ResourceDictionary.MergedDictionaries>
</ResourceDictionary>