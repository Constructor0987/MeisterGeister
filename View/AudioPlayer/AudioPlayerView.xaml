                                    <Image Width="20" Height="20" Source="/DSA%20MeisterGeister;component/Images/Icons/General/play_next.png" />
                                </Button>

                                <Button Width="26" Height="26" Name="btnBGSpeaker" Click="btnBGSpeaker_Click" Margin="170,0,0,0" Tag="false" Focusable="False">
                                    <Image Name="btnImgBGSpeaker" Width="20" Height="20" Margin="0,6,0,0" Source="/DSA%20MeisterGeister;component/Images/Icons/General/speaker.png" />
