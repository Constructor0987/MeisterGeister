                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="22" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Image Source="/Images/Icons/General/neu.png" Name="btnImgThemeNeu" VerticalAlignment="Center" />
                            <Label Padding="0" Name="btnLblThemeNeu" Grid.Column="1" VerticalContentAlignment="Center">Neues Theme</Label>
                        </Grid>
                    </Button>
                    <Button Name="btnThemeLöschen" Height="33" HorizontalAlignment="Left" Grid.Column="1" VerticalAlignment="Center" Click="btnThemeLöschen_Click"  Width="120" Visibility="Hidden" Focusable="False" IsTabStop="False">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="22" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Image Source="pack://application:,,,/DSA MeisterGeister;component/Images/Icons/General/entf_01.png" Name="btnImgThemeLöschen" VerticalAlignment="Center" />
                            <Label Padding="0" Name="btnLblThemeLöschen" Grid.Column="1" VerticalContentAlignment="Center">Theme löschen</Label>
                        </Grid>
                    </Button>
                    <ToggleButton Name="btnThemeEdit" ClickMode="Press" Height="33" HorizontalAlignment="Left" IsTabStop="False" Width="90" Grid.Column="1" Margin="130,0,0,0" Visibility="Hidden" Click="btnThemeEdit_Click" IsChecked="True" Focusable="False" Style="{Binding}" Background="{x:Null}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="22" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Image Name="image2" Source="/Images/Icons/General/feder.png" VerticalAlignment="Center" />
                            <Label Content="Bearbeiten" Grid.Column="1" Name="label1" Padding="0" VerticalContentAlignment="Center" />
                        </Grid>
                    </ToggleButton>                  
                    <Label Content="Name" Grid.Column="1" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" Name="ThemeBezeichnung" HorizontalAlignment="Right" Visibility="{Binding ElementName=tboxThemeBezeichnung, Path=Visibility}" />
                    <TextBox Background="{x:Null}" FontWeight="Bold" ForceCursor="True" Height="25" Width="240" Name="tboxThemeBezeichnung" Style="{Binding}" Grid.Column="2" Margin="0,5" Visibility="Hidden" KeyUp="tboxThemeBezeichnung_KeyUp" HorizontalAlignment="Left" />

                    <Label Content="keine Audio-Themes geladen"  Name="lblNoThemes" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Grid.Row="1" Grid.ColumnSpan="4" />
                    <ScrollViewer VerticalScrollBarVisibility="Visible" MinHeight="140" Margin="0,0,0,6" Grid.Row="1" Grid.ColumnSpan="4" Name="scrTheme">
                        <WrapPanel Name="WrapPnlUebersicht" />
                    </ScrollViewer>

                    <Expander Grid.Row="2" Grid.ColumnSpan="4"  IsExpanded="False" Name="exThemeEditor" ExpandDirection="Up" Expanded="exThemeEditor_Expanded" Collapsed="exThemeEditor_Collapsed" >
                        <Expander.Header>
                            <TextBlock Text="Theme - Editor" Style="{DynamicResource TextTitel}" />
                        </Expander.Header>
                        <Grid Name="grdThemeEditor" Grid.Row="2" Grid.ColumnSpan="3" Background="{StaticResource Background1}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="280" />
                            <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" MinHeight="100"/>
                            </Grid.RowDefinitions>
                            <Border>
                                <Grid Name="grd_themeMusik">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="230*" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="30" />
                                        <RowDefinition Height="30*" />
                                    </Grid.RowDefinitions>
                                    <Border Style="{DynamicResource ControlContentBorder}" Margin="1" Grid.ColumnSpan="2">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="80*" />
                                                <ColumnDefinition Width="100" />
                                                <ColumnDefinition Width="25" />
                                            </Grid.ColumnDefinitions>

                                            <Label Content="Musik-Playlists" Name="lblMusikPlaylists" VerticalContentAlignment="Top" Margin="5,0,0,0" FontWeight="Bold"  />
                                            <Border Grid.Column="1" Style="{DynamicResource ControlContentBorder}" ToolTip="Musik-Theme Filter">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="26" />
                                                        <ColumnDefinition Width="*" MinWidth="55" />
                                                        <ColumnDefinition Width="20" />
                                                    </Grid.ColumnDefinitions>
                                                    <Image Source="/Images/Icons/General/filter.png" Stretch="Fill"/>
                                                    <TextBox Margin="2,1" Name="tbThemeBGPlaylistFilter" Grid.Column="1" TextChanged="tbThemeBGPlaylistFilter_TextChanged"/>
                                                    <Image Source="/Images/Icons/Wuerfel/w6_blank.png" Stretch="Fill" HorizontalAlignment="Left" Grid.Column="2" Width="15" MouseUp="imgBGFilter_MouseUp" ToolTip="Filter löschen"/>
                                                </Grid>
                                            </Border>
                                            <Image Name="imgThemeBGPlaylistRefresh" Source="/Images/Icons/General/refresh.png" Grid.Column="2" Cursor="Hand" MouseDown="imgThemeBGPlaylistRefresh_MouseDown" />
                                        </Grid>
                                    </Border>
                                    <ScrollViewer VerticalScrollBarVisibility="Visible" AllowDrop="True" Margin="0,0,0,6" Name="scrHinter" Grid.Row="1">
                                        <WrapPanel Margin="5" Name="WrapPnlMusik" />
                                    </ScrollViewer>
                                </Grid>
                            </Border>

                            <Border Grid.Column="1" Name="brdThemeGeraeusche">
                                <Grid Name="grd_themeKlang">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="230*" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="30" />
                                        <RowDefinition Height="30*" />
                                    </Grid.RowDefinitions>
                                    <Border Style="{DynamicResource ControlContentBorder}" Margin="1">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="280*" />
                                                <ColumnDefinition Width="100" />
                                                <ColumnDefinition Width="25" />
                                            </Grid.ColumnDefinitions>
                                            <Label Content="Geräusch-Playlists" Name="lblKlangPlaylists" VerticalContentAlignment="Top" Margin="5,0,0,0" FontWeight="Bold" />
                                            <Border Grid.Column="1" Style="{DynamicResource ControlContentBorder}" ToolTip="Geräusche-Theme Filter">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="26" />
                                                        <ColumnDefinition Width="*" MinWidth="55" />
                                                        <ColumnDefinition Width="20" />
                                                    </Grid.ColumnDefinitions>
                                                    <Image Source="/Images/Icons/General/filter.png" Stretch="Fill"/>
                                                    <TextBox Margin="2,1" Name="tbThemeKlangPlaylistFilter" Grid.Column="1" TextChanged="tbThemeKlangPlaylistFilter_TextChanged"/>
                                                    <Image Source="/Images/Icons/Wuerfel/w6_blank.png" Stretch="Fill" HorizontalAlignment="Left" Grid.Column="2" Width="15" MouseUp="imgBGFilter_MouseUp" ToolTip="Filter löschen"/>
                                                </Grid>
                                            </Border>
                                            <Image Name="imgThemeKlangPlaylistRefresh" Source="/Images/Icons/General/refresh.png" Grid.Column="2" Cursor="Hand" MouseDown="imgThemeKlangPlaylistRefresh_MouseDown" />
                                        </Grid>
                                    </Border>
                                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Visible" Margin="0,0,0,6" Name="scrKlang" VerticalContentAlignment="Stretch">
                                    <StackPanel>
                                    <WrapPanel Margin="5" Name="WrapPnlGeraeusche" />
                                    <WrapPanel Margin="5" Name="WrapPnlThemes" />
                                    </StackPanel>

                                    </ScrollViewer>
                                </Grid>
                            </Border>
                        </Grid>
                     </Expander>
                </Grid>
            </TabItem>
        </TabControl>
        <Image Grid.RowSpan="2" Height="35" HorizontalAlignment="Left" Name="image1" Stretch="Fill" VerticalAlignment="Top" Width="35" Source="/DSA%20MeisterGeister;component/Images/Icons/General/info.png" MouseDown="image1_MouseDown" Cursor="Hand" FlowDirection="LeftToRight" Margin="10,0,0,0" ToolTip="Audio-Codec Informationen" />
    </Grid>
</UserControl>