<UserControl x:Class="MeisterGeister.View.SpielerScreen.SpielerScreenControlView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ViewGeneral="clr-namespace:MeisterGeister.View.General"
             mc:Ignorable="d" 
             d:DesignHeight="498" d:DesignWidth="767" Background="{StaticResource Background1}">
    
    <UserControl.Resources>
        <DataTemplate x:Key="ImageListBoxItemTemplate">
            <Grid ToolTip="{Binding Pfad}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="32" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Image Grid.Column="0" Source="{Binding Pfad, IsAsync=True}" />
                <TextBlock Grid.Column="1" Text="{Binding Name}" Margin="4,0,0,0" />
            </Grid>
        </DataTemplate>
    </UserControl.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        
        <Button Grid.Row="0" Grid.Column="1" Name="_buttonSpielerInfoControl" Margin="0,12,12,0" Height="45" VerticalAlignment="Top" Click="ButtonSpielerInfoControl_Click" HorizontalAlignment="Right" Width="45">
            <Button.ToolTip>
                <TextBlock Width="200" Height="Auto" TextWrapping="Wrap">
            		Ein Fenster starten/schließen, um den Spielern bestimmte Informationen (auf einem zweiten Bildschirm, falls vorhanden) zeigen zu können.
                </TextBlock>
            </Button.ToolTip>
            <Image Source="/Images/Icons/General/screen.png" />
        </Button>
        
        <GroupBox Header="Bild zeigen" Margin="12" Name="groupBox1" Background="{StaticResource BackgroundPergamentQuer}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Button Height="23" HorizontalAlignment="Left" VerticalAlignment="Top" Click="ButtonOpenImg_Click" ToolTip="Ein einzelnes Bild öffnen.">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Images/Icons/pinsel.png" />
                        <TextBlock Text="Bild öffnen" Margin="3,0" VerticalAlignment="Center" />
                    </StackPanel>
                </Button>
                <Button Height="23" HorizontalAlignment="Left" Margin="96,0,0,0" VerticalAlignment="Top" Click="ButtonOpenDir_Click" ToolTip="Einen kompletten Ordner mit Bildern öffnen.">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Images/Icons/General/oeffnen.png" />
                        <TextBlock Text="Ordner öffnen" Margin="3,0" VerticalAlignment="Center" />
                    </StackPanel>
                </Button>
                <Button Height="23" HorizontalAlignment="Left" Margin="229,0,0,0" VerticalAlignment="Top" Click="ButtonBildZeigen_Click">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Images/Icons/General/screen.png" />
                        <TextBlock Text="Zeige Spielern" Margin="3,0" VerticalAlignment="Center" />
                    </StackPanel>
                </Button>
                <CheckBox Grid.Column="0" Grid.Row="0" Margin="345,0,0,0" Name="_checkBoxMax" Content="Maximieren" VerticalAlignment="Center" VerticalContentAlignment="Center">
                    <CheckBox.ToolTip>
                        <TextBlock TextWrapping="Wrap" MaxWidth="200" Text="Bild auf maximale Größe vergrößern, andernfalls Origalgröße verwenden. Ist das Bild größer als der Bildschirm, wird es verkleinert." />
                    </CheckBox.ToolTip>
                </CheckBox>
                <TextBlock Grid.Column="0" Grid.Row="1" Margin="6" Name="_textBlockFilePath" Text="" TextWrapping="WrapWithOverflow" ToolTip="Pfad zum Bild" />
                <ListBox Grid.Column="0" Grid.Row="2" Margin="6" Name="_listBoxDirectory" Background="Transparent" SelectionChanged="ListBoxDirectory_SelectionChanged" ToolTip="Ordner-Inhalt" ItemTemplate="{StaticResource ImageListBoxItemTemplate}" KeyDown="ListBoxDirectory_KeyDown" />
                <Image Grid.Column="2" Grid.Row="0" Grid.RowSpan="3" Margin="6" Name="_image1" Stretch="Uniform" MinWidth="226" ToolTip="Vorschau" HorizontalAlignment="Right" MaxWidth="400" />
            </Grid>
        </GroupBox>

        <GroupBox Grid.Row="1" Grid.Column="0" Header="Text zeigen" Margin="12,0,12,12" Background="{StaticResource BackgroundPergamentQuer}">
            <ViewGeneral:FormatTextBox x:Name="_RTBNotiz" Margin="6" />
        </GroupBox>
        
    </Grid>
</UserControl>
