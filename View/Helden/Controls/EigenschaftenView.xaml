<UserControl x:Class="MeisterGeister.View.Helden.Controls.EigenschaftenView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ComponentModel="clr-namespace:System.ComponentModel;assembly=WindowsBase" 
             xmlns:ViewGeneral="clr-namespace:MeisterGeister.View.General" 
             mc:Ignorable="d" 
             d:DesignHeight="463" d:DesignWidth="660">
    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
        <StackPanel>
            <Grid Margin="5" Background="{StaticResource BackgroundPergamentQuer}" x:Name="_gridEigenschaften">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="70" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="70" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="20" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="60" />
                    <ColumnDefinition Width="10" />
                    <ColumnDefinition Width="37*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="10" />
                    <RowDefinition Height="28*" />
                </Grid.RowDefinitions>
                <Label Grid.Column="1" Grid.Row="0" Margin="3" Content="Wert" HorizontalAlignment="Center" VerticalAlignment="Center" />
                <Label Grid.Column="2" Grid.Row="0" Margin="3" Content="Mod" HorizontalAlignment="Center" x:Name="_labelEigenschaftMod" ToolTip="Modifikatoren durch Wunden, niedrige LE, etc." VerticalAlignment="Center" />
                <Label Grid.Column="4" Grid.Row="0" Margin="3" Content="Wert" HorizontalAlignment="Center" VerticalAlignment="Center" />
                <Label Grid.Column="5" Grid.Row="0" Margin="3" Content="Mod" HorizontalAlignment="Center" ToolTip="{Binding ToolTip, ElementName=_labelEigenschaftMod}" VerticalAlignment="Center" />
                <Label Grid.ColumnSpan="2" Grid.Row="1" Margin="5,3,0,3" Content="MU:" HorizontalAlignment="Left" VerticalAlignment="Center" />
                <ViewGeneral:IntBox Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="1" Margin="3,3,0,3" HorizontalAlignment="Left" MinWidth="65" ShowButtons="True" ToolTip="Mut" Value="{Binding Tag.MU, ElementName=_listBoxHelden, NotifyOnTargetUpdated=True, NotifyOnSourceUpdated=True}" VerticalAlignment="Center" />
                <TextBlock Grid.Column="2" Grid.Row="1" Height="23" Margin="6,2,2,2" Padding="2" Width="55" HorizontalAlignment="Center" Text="{Binding Tag.ModErschwernisMU, ElementName=_listBoxHelden}" TextAlignment="Center" ToolTip="{Binding ToolTip, ElementName=_labelEigenschaftMod}" VerticalAlignment="Center" />
                <Label Grid.Column="0" Grid.Row="2" Margin="3" Content="KL:" HorizontalAlignment="Left" VerticalAlignment="Center" />
                <ViewGeneral:IntBox Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="2" Margin="3,3,0,3" HorizontalAlignment="Left" MinWidth="65" ShowButtons="True" ToolTip="Klugheit" Value="{Binding Tag.KL, ElementName=_listBoxHelden, NotifyOnTargetUpdated=True, NotifyOnSourceUpdated=True}" VerticalAlignment="Center" />
                <TextBlock Grid.Column="2" Grid.Row="2" Height="23" Margin="6,2,2,2" Padding="2" Width="55" HorizontalAlignment="Center" Text="{Binding Tag.ModErschwernisKL, ElementName=_listBoxHelden}" TextAlignment="Center" ToolTip="{Binding ToolTip, ElementName=_labelEigenschaftMod}" VerticalAlignment="Center" />
                <Label Grid.Column="0" Grid.Row="3" Margin="3" Content="IN:" HorizontalAlignment="Left" VerticalAlignment="Center" />
                <ViewGeneral:IntBox Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="3" Margin="3,3,0,3" HorizontalAlignment="Left" MinWidth="65" ShowButtons="True" ToolTip="Intuition" Value="{Binding Tag.IN, ElementName=_listBoxHelden, NotifyOnTargetUpdated=True, NotifyOnSourceUpdated=True}" VerticalAlignment="Center" />
                <TextBlock Grid.Column="2" Grid.Row="3" Height="23" Margin="6,2,2,2" Padding="2" Width="55" HorizontalAlignment="Center" Text="{Binding Tag.ModErschwernisIN, ElementName=_listBoxHelden}" TextAlignment="Center" ToolTip="{Binding ToolTip, ElementName=_labelEigenschaftMod}" VerticalAlignment="Center" />
                <Label Grid.Column="0" Grid.Row="4" Margin="3" Content="CH:" HorizontalAlignment="Left" VerticalAlignment="Center" />
                <ViewGeneral:IntBox Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="4" Margin="3,3,0,3" HorizontalAlignment="Left" MinWidth="65" ShowButtons="True" ToolTip="Charisma" Value="{Binding Tag.CH, ElementName=_listBoxHelden, NotifyOnTargetUpdated=True, NotifyOnSourceUpdated=True}" VerticalAlignment="Center" />
                <TextBlock Grid.Column="2" Grid.Row="4" Height="23" Margin="6,2,2,2" Padding="2" Width="55" HorizontalAlignment="Center" Text="{Binding Tag.ModErschwernisCH, ElementName=_listBoxHelden}" TextAlignment="Center" ToolTip="{Binding ToolTip, ElementName=_labelEigenschaftMod}" VerticalAlignment="Center" />
                <Label Grid.Column="3" Grid.Row="1" Margin="3" Content="FF:" HorizontalAlignment="Left" VerticalAlignment="Center" />
                <ViewGeneral:IntBox Grid.Column="4" Grid.Row="1" Margin="3,3,0,3" HorizontalAlignment="Left" MinWidth="65" ShowButtons="True" ToolTip="Fingerfertigkeit" Value="{Binding Tag.FF, ElementName=_listBoxHelden, NotifyOnTargetUpdated=True, NotifyOnSourceUpdated=True}" VerticalAlignment="Center" />
                <TextBlock Grid.Column="5" Grid.Row="1" Height="23" Margin="6,2,2,2" Padding="2" Width="55" HorizontalAlignment="Center" Text="{Binding Tag.ModErschwernisFF, ElementName=_listBoxHelden}" TextAlignment="Center" ToolTip="{Binding ToolTip, ElementName=_labelEigenschaftMod}" VerticalAlignment="Center" />
                <Label Grid.Column="3" Grid.Row="2" Margin="3" Content="GE:" HorizontalAlignment="Left" VerticalAlignment="Center" />
                <ViewGeneral:IntBox Grid.Column="4" Grid.Row="2" Margin="3,3,0,3" HorizontalAlignment="Left" MinWidth="65" ShowButtons="True" ToolTip="Gewandtheit" Value="{Binding Tag.GE, ElementName=_listBoxHelden, NotifyOnTargetUpdated=True, NotifyOnSourceUpdated=True}" VerticalAlignment="Center" />
                <TextBlock Grid.Column="5" Grid.Row="2" Height="23" Margin="6,2,2,2" Padding="2" Width="55" HorizontalAlignment="Center" Text="{Binding Tag.ModErschwernisGE, ElementName=_listBoxHelden}" TextAlignment="Center" ToolTip="{Binding ToolTip, ElementName=_labelEigenschaftMod}" VerticalAlignment="Center" />
                <Label Grid.Column="3" Grid.Row="3" Margin="3" Content="KO:" HorizontalAlignment="Left" VerticalAlignment="Center" />
                <ViewGeneral:IntBox Grid.Column="4" Grid.Row="3" Margin="3,3,0,3" HorizontalAlignment="Left" MinWidth="65" ShowButtons="True" ToolTip="Konstitution" Value="{Binding Tag.KO, ElementName=_listBoxHelden, NotifyOnTargetUpdated=True, NotifyOnSourceUpdated=True}" VerticalAlignment="Center" />
                <TextBlock Grid.Column="5" Grid.Row="3" Height="23" Margin="6,2,2,2" Padding="2" Width="55" HorizontalAlignment="Center" Text="{Binding Tag.ModErschwernisKO, ElementName=_listBoxHelden}" TextAlignment="Center" ToolTip="{Binding ToolTip, ElementName=_labelEigenschaftMod}" VerticalAlignment="Center" />
                <Label Grid.Column="3" Grid.Row="4" Margin="3" Content="KK:" HorizontalAlignment="Left" VerticalAlignment="Center" />
                <ViewGeneral:IntBox Grid.Column="4" Grid.Row="4" Margin="3,3,0,3" HorizontalAlignment="Left" MinWidth="65" ShowButtons="True" ToolTip="Körperkraft" Value="{Binding Tag.KK, ElementName=_listBoxHelden, NotifyOnTargetUpdated=True, NotifyOnSourceUpdated=True}" VerticalAlignment="Center" />
                <TextBlock Grid.Column="5" Grid.Row="4" Height="23" Margin="6,2,2,2" Padding="2" Width="55" HorizontalAlignment="Center" Text="{Binding Tag.ModErschwernisKK, ElementName=_listBoxHelden}" TextAlignment="Center" ToolTip="{Binding ToolTip, ElementName=_labelEigenschaftMod}" VerticalAlignment="Center" />
                <Label Grid.Column="7" Grid.Row="1" Margin="3" Content="INI-Basis:" HorizontalAlignment="Left" VerticalAlignment="Center" />
                <TextBlock Grid.Column="9" Grid.Row="1" Height="23" Margin="6,2,2,2" Padding="2" Width="55" HorizontalAlignment="Center" x:Name="_textBlockInitiativeBasis" Text="{Binding Tag.InitiativeBasis, ElementName=_listBoxHelden}" TextAlignment="Center" ToolTip="Initiative-Basiswert" VerticalAlignment="Center" />
                <ViewGeneral:IntBox Grid.Column="8" Grid.Row="1" Margin="3,3,0,3" HorizontalAlignment="Left" MinWidth="65" ShowButtons="True" ToolTip="Initiative-Modifikator durch Rasse/Kultur/Profession" Value="{Binding Tag.InitiativeModGen, ElementName=_listBoxHelden, NotifyOnTargetUpdated=True, NotifyOnSourceUpdated=True}" VerticalAlignment="Center" />
                <Label Grid.Column="8" Grid.Row="0" Margin="3" Content="Mod" HorizontalAlignment="Center" VerticalAlignment="Center" />
                <Label Grid.Column="9" Grid.Row="0" Margin="3" Content="Wert" HorizontalAlignment="Center" VerticalAlignment="Center" />
                <Label Grid.Column="7" Grid.Row="2" Margin="3" Content="AT-Basis:" HorizontalAlignment="Left" VerticalAlignment="Center" />
                <TextBlock Grid.Column="9" Grid.Row="2" Height="23" Margin="6,2,2,2" Padding="2" Width="55" HorizontalAlignment="Center" x:Name="_textBlockAttackeBasis" Text="{Binding Tag.AttackeBasis, ElementName=_listBoxHelden}" TextAlignment="Center" ToolTip="Attacke-Basiswert" VerticalAlignment="Center" />
                <Label Grid.Column="7" Grid.Row="3" Margin="3" Content="PA-Basis:" HorizontalAlignment="Left" VerticalAlignment="Center" />
                <TextBlock Grid.Column="9" Grid.Row="3" Height="23" Margin="6,2,2,2" Padding="2" Width="55" HorizontalAlignment="Center" x:Name="_textBlockParadeBasis" Text="{Binding Tag.ParadeBasis, ElementName=_listBoxHelden}" TextAlignment="Center" ToolTip="Parade-Basiswert" VerticalAlignment="Center" />
                <Label Grid.Column="7" Grid.Row="4" Margin="3" Content="FK-Basis:" HorizontalAlignment="Left" VerticalAlignment="Center" />
                <TextBlock Grid.Column="9" Grid.Row="4" Height="23" Margin="6,2,2,2" Padding="2" Width="55" HorizontalAlignment="Center" x:Name="_textBlockFernkampfBasis" Text="{Binding Tag.FernkampfBasis, ElementName=_listBoxHelden}" TextAlignment="Center" ToolTip="Fernkampf-Basiswert" VerticalAlignment="Center" />
                <Label Grid.Column="0" Grid.Row="6" Margin="3" Content="WS:" HorizontalAlignment="Left" ToolTip="Wundschwelle" VerticalAlignment="Center" />
                <TextBlock Grid.Column="1" Grid.ColumnSpan="4" Grid.Row="6" Height="23" Margin="6,2,2,2" Padding="2" Width="Auto" HorizontalAlignment="Left" x:Name="_textBlockWundschwelle" Text="{Binding Tag.Wundschwellen, ElementName=_listBoxHelden}" TextAlignment="Center" ToolTip="Wundschwelle" VerticalAlignment="Center" />
                <Label Grid.Column="3" Grid.Row="6" Margin="3" Content="SO:" HorizontalAlignment="Left" VerticalAlignment="Center" />
                <ViewGeneral:IntBox Grid.Column="4" Grid.Row="6" Margin="3,3,0,3" HorizontalAlignment="Left" MinWidth="65" ShowButtons="True" ToolTip="Sozialstatus" Value="{Binding Tag.Sozialstatus, ElementName=_listBoxHelden, NotifyOnTargetUpdated=True, NotifyOnSourceUpdated=True}" VerticalAlignment="Center" />
                <!-- Magieresistenz -->
                <Label Grid.Column="7" Grid.Row="6" Margin="3" Content="MR:" HorizontalAlignment="Left" x:Name="_labelMR" VerticalAlignment="Center" />
                <ViewGeneral:IntBox x:Name="_intBoxMR" Grid.Column="8" Grid.Row="6" Margin="6,2,2,2" HorizontalAlignment="Left" MinWidth="65" ShowButtons="True" ToolTip="Magieresistenz-Modifikator durch Rasse/Kultur/Profession, Vor-/Nachteile, Zukauf, etc." Value="{Binding Tag.MagieresistenzMod, ElementName=_listBoxHelden, NotifyOnTargetUpdated=True, NotifyOnSourceUpdated=True}" VerticalAlignment="Center" />
                <TextBlock Grid.Column="9" Grid.Row="6" Height="23" Margin="6,2,2,2" Padding="2" Width="55" HorizontalAlignment="Center" x:Name="_textBlockMagieresistenz" Text="{Binding Tag.Magieresistenz, ElementName=_listBoxHelden}" TextAlignment="Center" ToolTip="Magieresistenz" VerticalAlignment="Center" />
            </Grid>
            <Separator />
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="240" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="5" />
                    <ColumnDefinition Width="240" />
                </Grid.ColumnDefinitions>
                <Grid Margin="5" Background="{StaticResource BackgroundPergamentQuer}" x:Name="_gridBasiswerte">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="10" />
                    </Grid.RowDefinitions>
                    <Label Grid.Column="1" Grid.Row="0" Margin="3" Content="Mod" HorizontalAlignment="Center" VerticalAlignment="Center" />
                    <Label Grid.Column="2" Grid.Row="0" Margin="3" Content="Max" HorizontalAlignment="Center" VerticalAlignment="Center" />
                    <Label Grid.Column="3" Grid.Row="0" Margin="3" Content="Aktuell" HorizontalAlignment="Center" VerticalAlignment="Center" />
                    <!-- Lebensenergie -->
                    <Label Grid.Column="0" Grid.Row="1" Margin="3" Content="LE:" HorizontalAlignment="Center" VerticalAlignment="Center" />
                    <ViewGeneral:IntBox Grid.Column="1" Grid.Row="1" Margin="3,3,0,3" HorizontalAlignment="Left" MinWidth="65" ShowButtons="True" ToolTip="Lebenspunkte-Modifikator durch Rasse/Kultur/Profession, Vor-/Nachteile, Zukauf, etc." Value="{Binding Tag.LebensenergieMod, ElementName=_listBoxHelden, NotifyOnTargetUpdated=True, NotifyOnSourceUpdated=True}" VerticalAlignment="Center" />
                    <TextBlock Grid.Column="2" Grid.Row="1" Height="23" Margin="6,2,2,2" Padding="2" Width="55" HorizontalAlignment="Center" x:Name="_textBlockLebensenergieMax" Text="{Binding Tag.LebensenergieMax, ElementName=_listBoxHelden}" TextAlignment="Center" ToolTip="Maximale Lebensenergie" VerticalAlignment="Center" />
                    <ViewGeneral:IntBox x:Name="_intBoxLeAktuell" Grid.Column="3" Grid.Row="1" Margin="3,3,0,3" HorizontalAlignment="Left" MinWidth="65" ShowButtons="True" ToolTip="Aktuelle Lebensenergie" Value="{Binding Tag.LebensenergieAktuell, ElementName=_listBoxHelden, NotifyOnTargetUpdated=True, NotifyOnSourceUpdated=True}" VerticalAlignment="Center" />
                    <Button Grid.Column="4" Grid.Row="1" Height="23" Margin="4" Width="30" Click="ButtonMax_Click" Content="Max" Tag="LE" ToolTip="LE auf den Maximalwert setzen." />
                    <ViewGeneral:EnergieControl x:Name="_energieControlLebensenergie" Grid.Column="5" Grid.Row="1" Margin="3,3,3,3" Energie="Lebensenergie" SelectedKämpfer="{Binding Tag, ElementName=_listBoxHelden}" />
                    <!-- Ausdauer -->
                    <Label Grid.Column="0" Grid.Row="2" Margin="3" Content="AU:" HorizontalAlignment="Center" VerticalAlignment="Center" />
                    <ViewGeneral:IntBox Grid.Column="1" Grid.Row="2" Margin="3,3,0,3" HorizontalAlignment="Left" MinWidth="65" ShowButtons="True" ToolTip="Ausdauer-Modifikator durch Rasse/Kultur/Profession, Vor-/Nachteile, Zukauf, etc." Value="{Binding Tag.AusdauerMod, ElementName=_listBoxHelden, NotifyOnTargetUpdated=True, NotifyOnSourceUpdated=True}" VerticalAlignment="Center" />
                    <TextBlock Grid.Column="2" Grid.Row="2" Height="23" Margin="6,2,2,2" Padding="2" Width="55" HorizontalAlignment="Center" x:Name="_textBlockAusdauerMax" Text="{Binding Tag.AusdauerMax, ElementName=_listBoxHelden}" TextAlignment="Center" ToolTip="Maximale Ausdauer" VerticalAlignment="Center" />
                    <ViewGeneral:IntBox x:Name="_intBoxAuAktuell" Grid.Column="3" Grid.Row="2" Margin="3,3,0,3" HorizontalAlignment="Left" MinWidth="65" ShowButtons="True" ToolTip="Aktuelle Ausdauer" Value="{Binding Tag.AusdauerAktuell, ElementName=_listBoxHelden, NotifyOnTargetUpdated=True, NotifyOnSourceUpdated=True}" VerticalAlignment="Center" />
                    <Button Grid.Column="4" Grid.Row="2" Height="23" Margin="4" Width="30" Click="ButtonMax_Click" Content="Max" Tag="AU" ToolTip="AU auf den Maximalwert setzen." />
                    <ViewGeneral:EnergieControl x:Name="_energieControlAusdauer" Grid.Column="5" Grid.Row="2" Margin="3,3,3,3" Energie="Ausdauer" SelectedKämpfer="{Binding Tag, ElementName=_listBoxHelden}" />
                    <!-- Astralenergie -->
                    <Label Grid.Column="0" Grid.Row="3" Margin="3" Content="AE:" HorizontalAlignment="Center" x:Name="_labelAstralenergie" VerticalAlignment="Center" />
                    <Image Grid.Column="0" Grid.Row="3" Height="16" Margin="0,2,2,0" Width="16" x:Name="_imageAeKeHinweis" Source="/Images/Icons/General/info.png" Stretch="Fill" VerticalAlignment="Top">
                        <Image.ToolTip>
                            <TextBlock Height="Auto" Width="350" TextWrapping="Wrap"><Run Text="Die Felder für AE/KE werden eingeblendet, sobald ein magie-/karmaspendender Vorteil (Viertel-, Halb- oder Vollzauberer / Geweiht) eingefügt wurde."/></TextBlock>
                        </Image.ToolTip>
                    </Image>
                    <ViewGeneral:IntBox x:Name="_intBoxAeMod" Grid.Column="1" Grid.Row="3" Margin="3,3,0,3" HorizontalAlignment="Left" MinWidth="65" ShowButtons="True" ToolTip="Astralenergie-Modifikator durch Rasse/Kultur/Profession, Vor-/Nachteile, Zukauf, etc." Value="{Binding Tag.AstralenergieMod, ElementName=_listBoxHelden, NotifyOnTargetUpdated=True, NotifyOnSourceUpdated=True}" VerticalAlignment="Center" Visibility="{Binding Visibility, ElementName=_labelAstralenergie}" />
                    <TextBlock Grid.Column="2" Grid.Row="3" Height="23" Margin="6,2,2,2" Padding="2" Width="55" HorizontalAlignment="Center" x:Name="_textBlockAstralenergieMax" Text="{Binding Tag.AstralenergieMax, ElementName=_listBoxHelden}" TextAlignment="Center" ToolTip="Maximale Astralenergie" VerticalAlignment="Center" Visibility="{Binding Visibility, ElementName=_labelAstralenergie}" />
                    <ViewGeneral:IntBox x:Name="_intBoxAeAktuell" Grid.Column="3" Grid.Row="3" Margin="3,3,0,3" HorizontalAlignment="Left" MinWidth="65" ShowButtons="True" ToolTip="Aktuelle Astralenergie" Value="{Binding Tag.AstralenergieAktuell, ElementName=_listBoxHelden, NotifyOnTargetUpdated=True, NotifyOnSourceUpdated=True}" VerticalAlignment="Center" Visibility="{Binding Visibility, ElementName=_labelAstralenergie}" />
                    <Button Grid.Column="4" Grid.Row="3" Height="23" Margin="4" Width="30" Click="ButtonMax_Click" Content="Max" Tag="AE" ToolTip="AE auf den Maximalwert setzen." Visibility="{Binding Visibility, ElementName=_labelAstralenergie}" />
                    <ViewGeneral:EnergieControl x:Name="_energieControlAstralenergie" Grid.Column="5" Grid.Row="3" Margin="3,3,3,3" Energie="Astralenergie" SelectedKämpfer="{Binding Tag, ElementName=_listBoxHelden, NotifyOnTargetUpdated=True, NotifyOnSourceUpdated=True}" Visibility="{Binding Visibility, ElementName=_labelAstralenergie}" />
                    <!-- Karmaenergie -->
                    <Label Grid.Column="0" Grid.Row="4" Margin="3" Content="KE:" HorizontalAlignment="Center" x:Name="_labelKarmaenergie" VerticalAlignment="Center" />
                    <ViewGeneral:IntBox x:Name="_intBoxKeMod" Grid.Column="1" Grid.Row="4" Margin="3,3,0,3" HorizontalAlignment="Left" MinWidth="65" ShowButtons="True" ToolTip="Karmaenergie-Modifikator durch Rasse/Kultur/Profession, Vor-/Nachteile, Zukauf, etc." Value="{Binding Tag.KarmaenergieMod, ElementName=_listBoxHelden, NotifyOnTargetUpdated=True, NotifyOnSourceUpdated=True}" VerticalAlignment="Center" Visibility="{Binding Visibility, ElementName=_labelKarmaenergie}" />
                    <TextBlock Grid.Column="2" Grid.Row="4" Height="23" Margin="6,2,2,2" Padding="2" Width="55" HorizontalAlignment="Center" x:Name="_textBlockKarmaenergieMax" Text="{Binding Tag.KarmaenergieMax, ElementName=_listBoxHelden}" TextAlignment="Center" ToolTip="Maximale Karmaenergie" VerticalAlignment="Center" Visibility="{Binding Visibility, ElementName=_labelKarmaenergie}" />
                    <ViewGeneral:IntBox x:Name="_intBoxKeAktuell" Grid.Column="3" Grid.Row="4" Margin="3,3,0,3" HorizontalAlignment="Left" MinWidth="65" ShowButtons="True" ToolTip="Aktuelle Karmaenergie" Value="{Binding Tag.KarmaenergieAktuell, ElementName=_listBoxHelden, NotifyOnTargetUpdated=True, NotifyOnSourceUpdated=True}" VerticalAlignment="Center" Visibility="{Binding Visibility, ElementName=_labelKarmaenergie}" />
                    <Button Grid.Column="4" Grid.Row="4" Height="23" Margin="4" Width="30" Click="ButtonMax_Click" Content="Max" Tag="KE" ToolTip="KE auf den Maximalwert setzen." Visibility="{Binding Visibility, ElementName=_labelKarmaenergie}" />
                    <ViewGeneral:EnergieControl x:Name="_energieControlKarmaenergie" Grid.Column="5" Grid.Row="4" Margin="3,3,3,3" Energie="Karmaenergie" SelectedKämpfer="{Binding Tag, ElementName=_listBoxHelden}" Visibility="{Binding Visibility, ElementName=_labelKarmaenergie}" />
                </Grid>
                <Grid Grid.Column="2" Margin="5" Background="{StaticResource BackgroundPergamentQuer}" x:Name="_gridWunden">
                    <Grid>
                        <Grid.Background>
                            <ImageBrush ImageSource="/Images/Koerperzonen/koerperzonen_01.png" Stretch="Uniform" TileMode="None" />
                        </Grid.Background>
                        <!-- Wunden -->
                        <ViewGeneral:IntBox Margin="159,20,6,187" Width="65" MarkPlusValue="True" MinValue="0" ShowButtons="True" ToolTip="Wunden (Unlokalisiert)" Value="{Binding Tag.Wunden, ElementName=_listBoxHelden, NotifyOnTargetUpdated=True, NotifyOnSourceUpdated=True}" />
                        <ViewGeneral:IntBox Margin="81,14,84,193" Width="65" MarkPlusValue="True" MinValue="0" ShowButtons="True" ToolTip="Wunden (Kopf)" Value="{Binding Tag.WundenKopf, ElementName=_listBoxHelden, NotifyOnTargetUpdated=True, NotifyOnSourceUpdated=True}" />
                        <ViewGeneral:IntBox Margin="81,54,84,153" Width="65" MarkPlusValue="True" MinValue="0" ShowButtons="True" ToolTip="Wunden (Brust)" Value="{Binding Tag.WundenBrust, ElementName=_listBoxHelden, NotifyOnTargetUpdated=True, NotifyOnSourceUpdated=True}" />
                        <ViewGeneral:IntBox Margin="13,83,152,124" Width="65" MarkPlusValue="True" MinValue="0" ShowButtons="True" ToolTip="Wunden (linker Arm)" Value="{Binding Tag.WundenArmL, ElementName=_listBoxHelden, NotifyOnTargetUpdated=True, NotifyOnSourceUpdated=True}" />
                        <ViewGeneral:IntBox Margin="155,83,10,124" Width="65" MarkPlusValue="True" MinValue="0" ShowButtons="True" ToolTip="Wunden (rechter Arm)" Value="{Binding Tag.WundenArmR, ElementName=_listBoxHelden, NotifyOnTargetUpdated=True, NotifyOnSourceUpdated=True}" />
                        <ViewGeneral:IntBox Margin="81,116,84,91" Width="65" MarkPlusValue="True" MinValue="0" ShowButtons="True" ToolTip="Wunden (Bauch)" Value="{Binding Tag.WundenBauch, ElementName=_listBoxHelden, NotifyOnTargetUpdated=True, NotifyOnSourceUpdated=True}" />
                        <ViewGeneral:IntBox Margin="40,179,125,28" Width="65" MarkPlusValue="True" MinValue="0" ShowButtons="True" ToolTip="Wunden (linkes Bein)" Value="{Binding Tag.WundenBeinL, ElementName=_listBoxHelden, NotifyOnTargetUpdated=True, NotifyOnSourceUpdated=True}" />
                        <ViewGeneral:IntBox Margin="130,179,35,28" Width="65" MarkPlusValue="True" MinValue="0" ShowButtons="True" ToolTip="Wunden (rechtes Bein)" Value="{Binding Tag.WundenBeinR, ElementName=_listBoxHelden, NotifyOnTargetUpdated=True, NotifyOnSourceUpdated=True}" />
                        <Label Height="30" Margin="11,13,0,0" Width="64" Content="Wunden" HorizontalAlignment="Left" VerticalAlignment="Top" />
                    </Grid>
                </Grid>
            </Grid>
        </StackPanel>
    </ScrollViewer>
</UserControl>
