                        <Label Grid.Column="0" Grid.Row="3" Content="AE:" HorizontalAlignment="Left" x:Name="_labelAstralenergie" VerticalAlignment="Center" Visibility="{Binding SelectedHeld.Magiebegabt, Converter={StaticResource BooleanToVisibilityConverter1}}" FontWeight="Bold" />
