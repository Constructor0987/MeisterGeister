<UserControl x:Class="MeisterGeister.View.Helden.Controls.ZauberView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ViewGeneral="clr-namespace:MeisterGeister.View.General" 
             mc:Ignorable="d" 
             d:DesignHeight="299" d:DesignWidth="677">
    <Grid>
        <ComboBox Height="23" Margin="6,14,0,0" Width="193" DisplayMemberPath="Key" DropDownClosed="_comboBoxZauber_DropDownClosed" DropDownOpened="_comboBoxZauber_DropDownOpened" HorizontalAlignment="Left" KeyDown="_comboBoxZauber_KeyDown" x:Name="_comboBoxZauber" ToolTip="Zauber hinzufügen" VerticalAlignment="Top" />
        <ComboBox Height="23" Margin="213,14,0,0" Width="142" DisplayMemberPath="Value" HorizontalAlignment="Left" x:Name="_comboBoxRepräsentation" SelectedValuePath="Key" ToolTip="Repräsentation des Zaubers" VerticalAlignment="Top" />
        <!--<ComboBox Height="23" Margin="213,14,0,0" Width="142" DisplayMemberPath="Value" HorizontalAlignment="Left" ItemsSource="{x:Static LogicGeneral:Repräsentationen.RepräsentationenListe}" x:Name="_comboBoxRepräsentation" SelectedValuePath="Key" ToolTip="Repräsentation des Zaubers" VerticalAlignment="Top" />-->
        <Image Grid.Row="0" Height="16" Margin="0,8,2,0" Width="16" HorizontalAlignment="Right" Source="/Images/Icons/General/info.png" Stretch="Fill" VerticalAlignment="Top">
            <Image.ToolTip>
                <TextBlock Height="Auto" Width="200" TextWrapping="Wrap"><Run Text="Rechtsklick auf ein Zauber für weitere Aktionen."/></TextBlock>
            </Image.ToolTip>
        </Image>
        <DataGrid Margin="0,43,0,6" AutoGenerateColumns="False" Background="{StaticResource BackgroundPergamentQuer}" CanUserAddRows="False" CanUserSortColumns="False" EnableRowVirtualization="True" x:Name="_dataGridHeldZauber" PreviewKeyDown="_dataGridHeldZauber_PreviewKeyDown" RowDetailsVisibilityMode="VisibleWhenSelected" RowBackground="#00000000" BorderBrush="#00000000">
        <!--<DataGrid Margin="0,43,0,6" AutoGenerateColumns="False" Background="{StaticResource BackgroundPergamentQuer}" CanUserAddRows="False" CanUserSortColumns="False" EnableRowVirtualization="True" ItemsSource="{Binding Source={StaticResource heldHeld_ZauberViewSource}}" x:Name="_dataGridHeldZauber" PreviewKeyDown="_dataGridHeldZauber_PreviewKeyDown" RowDetailsVisibilityMode="VisibleWhenSelected" RowBackground="#00000000" BorderBrush="#00000000">-->
            <DataGrid.ContextMenu>
                <ContextMenu Opened="ContextMenuZauber_Opened">
                    <MenuItem Height="28" Click="MenuItemZauberProben_Click" Header="Probe würfeln" x:Name="_menuItemZauberProben">
                        <MenuItem.Icon>
                            <Image Margin="2" Source="/Images/Icons/Wuerfel/w20.png" Stretch="Fill" />
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Height="28" Click="MenuItemZauberWiki_Click" Header="In Wiki-Aventurica anzeigen" x:Name="_menuItemZauberWiki">
                        <MenuItem.Icon>
                            <Image Margin="2" Source="/Images/Logos/WikiAventurica_Logo.png" Stretch="Fill" />
                        </MenuItem.Icon>
                    </MenuItem>
                    <Separator />
                    <MenuItem Height="28" Click="MenuItemZauberLöschen_Click" Header="Löschen" x:Name="_menuItemZauberLöschen">
                        <MenuItem.Icon>
                            <Image Margin="2" Source="/Images/Icons/General/entf_01.png" Stretch="Fill" />
                        </MenuItem.Icon>
                    </MenuItem>
                </ContextMenu>
            </DataGrid.ContextMenu>
            <DataGrid.Columns>
                <DataGridTextColumn Width="Auto" Binding="{Binding Row.ZauberRow.Name}" Header="Zaubername" IsReadOnly="True" />
                <DataGridTextColumn Width="Auto" Binding="{Binding Row.ZauberRow.Eigenschaft1}" IsReadOnly="True" />
                <DataGridTextColumn Width="Auto" Binding="{Binding Row.ZauberRow.Eigenschaft2}" IsReadOnly="True" />
                <DataGridTextColumn Width="Auto" Binding="{Binding Row.ZauberRow.Eigenschaft3}" IsReadOnly="True" />
                <DataGridTextColumn Width="Auto" Binding="{Binding Row.ZauberRow.Komplex}" Header="Kom." IsReadOnly="True" />
                <DataGridTextColumn Width="Auto" Binding="{Binding Repräsentation}" Header="Rep." IsReadOnly="True" />
                <DataGridTemplateColumn Header="ZfW">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ViewGeneral:IntBox NoMouseWheel="True" ShowButtons="True" Value="{Binding ZfW, NotifyOnTargetUpdated=True, NotifyOnSourceUpdated=True, UpdateSourceTrigger=PropertyChanged}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Width="Auto" Binding="{Binding Row.ZauberRow.Merkmale}" Header="Merkmale" IsReadOnly="True" />
                <DataGridTextColumn Width="Auto" Binding="{Binding Bemerkung}" Header="Bemerkung" />
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Height="23" Margin="388,14,0,0" Width="151" HorizontalAlignment="Left" x:Name="stackPanel1" Orientation="Horizontal" VerticalAlignment="Top">
            <Label Content="Aktivierte Zauber:" />
            <Label Content="{Binding Items.Count, ElementName=_dataGridHeldZauber}" />
        </StackPanel>
    </Grid>
</UserControl>
