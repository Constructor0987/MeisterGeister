<UserControl x:Class="MeisterGeister.View.Kampf.ManöverSymbol"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MeisterGeister.View.Kampf"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Image>
        <Image.Style>
            <Style TargetType="Image">
                <Style.Triggers>
                    <DataTrigger Binding="{Binding Manöver.Name}" Value="Attacke">
                        <Setter Property="Source" Value="/DSA%20MeisterGeister;component/Images/Icons/nahkampf_03.png"/>
                    </DataTrigger>
                    <DataTrigger Binding="{Binding Manöver.Name}" Value="Parade">
                        <Setter Property="Source" Value="/DSA%20MeisterGeister;component/Images/Icons/schild.png"/>
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </Image.Style>
    </Image>
</UserControl>
