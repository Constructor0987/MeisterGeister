                            <ViewGeneral:IntBox Margin="0,9,56,0" Value="{Binding Path=SelectedKämpferInfo.Kämpfer.RS[Kopf]}" ToolTip="Rüstungsschutz (Kopf)" FontWeight="Bold" MinValue="0" Height="23" VerticalAlignment="Top" Width="23" HorizontalAlignment="Right" WeissAufSchwarz="True" />
