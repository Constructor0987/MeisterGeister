                            <ViewGeneral:IntBox Margin="0,81,9,0" Value="{Binding Path=SelectedKämpferInfo.Kämpfer.RS[ArmL]}" ToolTip="Rüstungsschutz (linker Arm)" FontWeight="Bold" MinValue="0" Height="23" VerticalAlignment="Top" Width="23" HorizontalAlignment="Right" WeissAufSchwarz="True" />
