                            <ViewGeneral:IntBox Margin="0,31,56,0" Value="{Binding Path=SelectedKämpferInfo.Kämpfer.WundenByZone[Kopf]}" ToolTip="Wunden (Kopf)" FontWeight="Bold" MinValue="0" Height="23" VerticalAlignment="Top" Width="23" HorizontalAlignment="Right" MarkPlusValue="True" />
