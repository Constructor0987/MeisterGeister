<UserControl x:Class="MeisterGeister.View.Beschwörung.BeschwörungView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Beschwörung="clr-namespace:MeisterGeister.View.Beschwörung"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <TabControl>
            <TabItem Header="Dämonen">
                <Beschwörung:DämonenBeschwörungView/>
            </TabItem>
            <TabItem Header="Elementare">
                <Beschwörung:ElementarBeschwörungView/>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
