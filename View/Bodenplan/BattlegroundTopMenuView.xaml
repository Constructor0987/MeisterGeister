                                            </ToggleButton.Content>
                                        </ToggleButton>
                                        <ToggleButton
                                            Width="22"
                                            Height="22"
                                            Margin="35,23,0,0"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Top"
                                            IsChecked="{Binding HexGrid}"
