                                        Command="{Binding OnSaveXML_Battlemap}">
                                        <Image Source="/DSA MeisterGeister;component/Images/Icons/General/speichern.png" />
                                    </Button>
                                </StackPanel>
                                <CheckBox
                                    Height="16"
                                    Margin="13,28,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    Content="ohne Bilder"
                                    FontSize="10"
                                    IsChecked="{Binding LSWithoutPictures}" />
                                <Button
                                    Width="75"
                                    Height="22"
                                    Margin="110,10,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
