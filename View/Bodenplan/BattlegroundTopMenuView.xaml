                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    DisplayMemberPath="ObjectName"
                    ItemsSource="{Binding BattlegroundObjects}"
                    SelectedItemsOverride="{Binding SelectedListBoxBattlegroundObjects, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    SelectedValue="{Binding SelectedObjectsFromListBox}"
                    ToolTip="text"
                    Visibility="Collapsed" />
                </Grid>
            </ScrollViewer>
        </DockPanel>
    </Grid>
</UserControl>
