                                            ToolTip="Rasterfarbe" />
                                    </Grid>
                                    <Border
                                        Grid.Column="1"
                                        Width="1"
                                        HorizontalAlignment="Left"
                                        BorderBrush="DarkGray"
                                        BorderThickness="1" />
                                    <Grid 
                                        Grid.Column="1" >
                                        <Label 
                                            Margin="5,0,0,16"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Top"
                                            Padding="0" Height="32" Width="69" >
                                            <Label.Content>
                                                <StackPanel >
                                                    <TextBlock Text="Hintergrund-"/>
                                                    <TextBlock Text="bild laden" HorizontalAlignment="Right" />
                                                </StackPanel>
                                            </Label.Content>
                                        </Label>
                                        <Button                            
                                            Width="27"
                                            Height="27"
                                            Margin="80,3,10,20"
                                            Padding="0"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Top"
                                            Command="{Binding OnSetBackgroundClick}"
                                            ToolTip="Hintergrundbild festlegen">
                                            <Button.Content>
                                                <Image Margin="2" Source="/Images/Icons/dungeon.png" />
                                            </Button.Content>
                                        </Button>
                                        <Grid
                                            HorizontalAlignment="Left"
                                            Width="220"
                                            Margin="3,0,0,0" >
                                            <Grid.Style>
                                                <Style TargetType="Grid">
                                                    <Setter Property="Visibility" Value="Visible" />
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding BackgroundImage, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource IsNullOrEmptyConverter}}" Value="true">
                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Grid.Style>

                                            <Image
                                                Grid.RowSpan="2"
                                                Grid.Column="1"
                                                Height="25"
                                                Margin="0,0,6,0"
                                                HorizontalAlignment="Right"
                                                Source="/Images/Icons/General/y-offset.png" />
                                            <Image
                                                Grid.Row="0"
                                                Grid.RowSpan="2"
                                                Height="25"
                                                Margin="145,3,0,0"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Top"
                                                Source="/Images/Icons/General/x-offset.png" />

                                            <Slider
                                                Margin="0,0,5,0"
                                                HorizontalAlignment="Right"
                                                LargeChange="10"
                                                Maximum="15000"
                                                Minimum="-15000"
                                                MouseWheel="sl_MouseWheel"
                                                Orientation="Vertical"
                                                RenderTransformOrigin="0.5,0.5"
                                                SmallChange="1"
                                                Style="{StaticResource SmallVerticalSlider}"
                                                ToolTip="Y-Offset -  Mausrad drehen um Feinjustierung durchzuführen"
                                                Value="{Binding InvBackgroundOffsetY}">
                                                <Slider.RenderTransform>
                                                    <TransformGroup>
                                                        <ScaleTransform ScaleX="-1" />
                                                        <SkewTransform />
                                                        <RotateTransform />
                                                        <TranslateTransform />
                                                    </TransformGroup>
                                                </Slider.RenderTransform>
                                            </Slider>
                                            <Slider
                                                Height="12"
                                                MinHeight="5"
                                                Margin="115,18,20,0"
                                                VerticalAlignment="Top"
                                                LargeChange="10"
                                                Maximum="15000"
                                                Minimum="-15000"
                                                MouseWheel="sl_MouseWheel"
                                                SmallChange="1"
                                                Style="{StaticResource SmallHorizontalSlider}"
                                                ToolTip="X-Offset -  Mausrad drehen um Feinjustierung durchzuführen"
                                                Value="{Binding BackgroundOffsetX}" />
                                            <StackPanel 
                                                Margin="5,35,0,0"
                                                VerticalAlignment="Top"
                                                HorizontalAlignment="Left"
                                                Orientation="Horizontal">
                                                <Image
                                                    Height="15"
                                                    HorizontalAlignment="Left"
                                                    Source="/Images/Icons/General/size.png" />
                                                <Slider
                                                    Width="85"
                                                    VerticalAlignment="Center"
                                                    LargeChange="10"
                                                    Maximum="20000"
                                                    Minimum="0"
                                                    MouseWheel="sl_MouseWheel"
                                                    Orientation="Horizontal"
                                                    SmallChange="1"
                                                    Style="{StaticResource SmallHorizontalSlider}"
                                                    ToolTip="Größe -  Mausrad drehen um Feinjustierung durchzuführen"
                                                    Value="{Binding BackgroundOffsetSize}" />
                                                <ViewGeneral:IntBox 
                                                    Value="{Binding BackgroundOffsetSize}" 
                                                    IncValue="10"
                                                    DecValue="10"
                                                    MinValue="0" 
                                                    MaxValue="20000" 
                                                    Padding="0" 
                                                    ShowButtons="True" 
                                                    Height="16" 
                                                    FontSize="11"
                                                    Width="74" />
                                            </StackPanel>
                                        </Grid>
                                    </Grid>
                                </Grid>
                            </Grid>
                        </TabItem>
                        <TabItem Header="Laden/Speichern">
                            <Grid Margin="0,0,9,0"
                                  MinHeight="50">
                                <StackPanel Orientation="Horizontal">
                                    <Button
                                        Width="22"
                                        Height="22"
                                        Margin="5,5,0,0"
                                        Padding="0"
