                                            <ToggleButton.Content>
                                                <Image
                                                    Margin="-2"
                                                    Source="/DSA MeisterGeister;component/Images/Icons/hex.png"
                                                    Stretch="Fill" />
                                            </ToggleButton.Content>
                                        </ToggleButton>

