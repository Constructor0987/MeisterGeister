                        </TabItem>
                        <TabItem Header="Hintergrund">
                            <Grid
                                MinHeight="50">
                                <Grid HorizontalAlignment="Left">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="130"/>
                                        <ColumnDefinition Width="300"/>
                                        <ColumnDefinition Width="0*" />
                                    </Grid.ColumnDefinitions>

                                    <Grid>
                                        <Label Content="Raster"
                                            Margin="5,0,0,0"/>
