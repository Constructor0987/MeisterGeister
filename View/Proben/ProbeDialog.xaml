<Window x:Class="MeisterGeister.View.Proben.ProbeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Proben="clr-namespace:MeisterGeister.View.Proben"
        Title="Probe" Height="290" Width="370" Icon="/DSA MeisterGeister;component/Images/Icons/wuerfelbecher.png"
        Background="{DynamicResource Background1}" WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        
        <Proben:ProbeControl x:Name="_probeControl" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Margin="25" Orientation="Vertical" />

        <Button Grid.Row="1" Grid.Column="2" Content="OK" Width="55" Margin="15" HorizontalAlignment="Right" Click="OkButton_Click" />
    </Grid>
</Window>
