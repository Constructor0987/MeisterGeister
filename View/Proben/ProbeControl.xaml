<UserControl x:Class="MeisterGeister.View.Proben.ProbeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ViewGeneral="clr-namespace:MeisterGeister.View.General" 
             mc:Ignorable="d" 
             Background="Transparent"
             d:DataContext="{d:DesignData /SampleData/ProbeControlViewModelSampleData.xaml}"
             d:DesignHeight="148" d:DesignWidth="192.667" Loaded="UserControl_Loaded_1">
    <UserControl.Resources>
        <Style x:Key="BoderContent" TargetType="{x:Type Border}" BasedOn="{StaticResource ControlContentBorder}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding Ergebnis.Ergebnis}" Value="GELUNGEN">
                    <Setter Property="Background" Value="#9990EE90" />
                </DataTrigger>
                <DataTrigger Binding="{Binding Ergebnis.Ergebnis}" Value="GLÜCKLICH">
                    <Setter Property="Background" Value="#99ADFF2F" />
                </DataTrigger>
                <DataTrigger Binding="{Binding Ergebnis.Ergebnis}" Value="MEISTERHAFT">
                    <Setter Property="Background" Value="#99008000" />
                </DataTrigger>
                <DataTrigger Binding="{Binding Ergebnis.Ergebnis}" Value="MISSLUNGEN">
                    <Setter Property="Background" Value="#99F08080" />
                </DataTrigger>
                <DataTrigger Binding="{Binding Ergebnis.Ergebnis}" Value="PATZER">
                    <Setter Property="Background" Value="#99B22222" />
                </DataTrigger>
                <DataTrigger Binding="{Binding Ergebnis.Ergebnis}" Value="FATALER_PATZER">
                    <Setter Property="Background" Value="#99FF0000" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Border Style="{DynamicResource BoderContent}" Padding="4">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Left">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Grid.Column="0" Text="{Binding Held.Name}" ToolTip="{Binding Held.Name}" TextTrimming="CharacterEllipsis" HorizontalAlignment="Left" />
                <StackPanel Grid.Row="1" Grid.Column="0" HorizontalAlignment="Left" Orientation="Horizontal">
                <TextBlock>
                    <TextBlock Text="{Binding Probenname}" FontStyle="Italic" />
                    <TextBlock Text="-Probe" />
                </TextBlock>
                <TextBlock Text="TaW" Margin="10,0,0,0" />
                <TextBlock Text="{Binding Probe.Fertigkeitswert}" FontWeight="Bold" Margin="5,0,0,0" />
                </StackPanel>
            </Grid>
            <ListBox Grid.Row="1" Grid.Column="0" BorderBrush="Transparent" Background="Transparent" ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                 ItemsSource="{Binding EigenschaftWurfItemListe}" HorizontalAlignment="Left">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" Text="{Binding Name}" HorizontalAlignment="Center" TextAlignment="Center" MinWidth="24" />
                            <ViewGeneral:IntBox Grid.Row="1" Value="{Binding Wert}" ToolTip="Eigenschafswert" HorizontalAlignment="Center" MinWidth="24" NoBackground="True" />
                            <Border Grid.Row="2" Width="24" Height="24" ToolTip="Ergebnis des Wurfs">
                                <Border.Background>
                                    <ImageBrush x:Name="_image" ImageSource="/DSA MeisterGeister;component/Images/Icons/Wuerfel/w20_blank.png" />
                                </Border.Background>
                                <TextBlock Text="{Binding Wurf}" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" />
                            </Border>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <Button Grid.Row="1" Grid.Column="1" Height="34" Width="34" ToolTip="Probe würfeln" Command="{Binding OnWürfeln}" Margin="10" HorizontalAlignment="Left">
                <Image Source="/DSA MeisterGeister;component/Images/Icons/Wuerfel/w20.png"  />
            </Button>
            <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal">
                <TextBlock ToolTip="Übrig behaltene Punkte" Margin="5,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <Run Text="{Binding Ergebnis.Übrig}" FontWeight="Bold" />
                    <Run Text="Punkte übrig" />
                </TextBlock>
                <Image Source="{Binding ErgebnisImagePath}" Margin="10,0,0,0" Width="22" Height="22" ToolTip="{Binding Ergebnis.Ergebnis}" VerticalAlignment="Top" />
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
